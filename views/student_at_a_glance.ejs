<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Info</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f7f9;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            flex-wrap: wrap;
        }

        .header-text {
            flex: 1 1 60%;
        }

        .header-images {
            flex: 1 1 35%;
            text-align: right;
        }

        .header-images img {
            max-height: 80px;
            margin-left: 10px;
        }

        .b_info,
        .main_content {
            margin-top: 30px;
        }

        .b_info p {
            margin: 5px 0;
            line-height: 1.5;
        }

        .s_name {
            font-size: 30px;
        }

        .main_content table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .main_content table th,
        .main_content table td {
            text-align: left;
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        .main_content table th {
            background-color: #007bff;
            color: white;
        }

        .main_content table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .login-button {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <% if (locals.Student) { %>
        <div class="container">
            <div class="header">
                <div class="header-text">
                    <h1>Computronics</h1>
                    <h3>A Gateway to Computer World</h3>
                    <p>5 No. Serampore Colony, Rajyadharpore (S), Near ESI Hospital,
                        Hooghly, West Bengal</p>
                </div>
                <div class="header-images">
                    <img src="/public/main_logo.png" alt="Main Logo">
                    <img src="/public/QR-Web-MS.png" alt="QR Code">
                </div>
                <hr style="width: 100%; height: 2px; background-color: #007bff; border: none; margin: 20px 0;">
            </div>

            <div class="b_info">
                <p class="s_name"><strong>
                        <%= s_info.name %>
                    </strong></p>
                <p><strong>Father's Name:</strong>
                    <%= s_info.fatherName %>
                </p>
                <p><strong>Date of Admission:</strong>
                    <%= s_info.doa %>
                </p>
                <p><strong>Address:</strong>
                    <%= s_info.address %>
                </p>
                <p><strong>Contact:</strong>
                    <%= s_info.contact %>
                </p>
                <p><strong>Email ID:</strong>
                    <%= s_info.email %>
                </p>
            </div>

            <div class="main_content">
                <h3>Course Completed</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Marks Obtained</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (c_completed && Array.isArray(c_completed.items) && c_completed.items.length> 0) { %>
                            <% c_completed.items.forEach(function(course) { %>
                                <tr>
                                    <td>
                                        <%= course.Course %>
                                    </td>
                                    <td>
                                        <%= course.Marks %>%
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="2" style="text-align:center; color: #999;">
                                                No courses completed yet.
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } else { %>
            <a class="login-button" href="/">Login</a>
            <% } %>
</body>

</html>