    <style>
        /* student info */
        .certification {
            width: 77%;
            /* Same as table width */
            max-width: 1200px;
            /* Limit the width */
            margin: 20px auto;
            /* Center the certification */
            padding: 20px;
            /* Add some padding for better spacing */
            border: 1px solid #ddd;
            /* Border similar to the table's border */
            background-color: #f9f9f9;
            /* Light background for readability */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            color: #333;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* Light shadow for depth */
            border-radius: 8px;
            /* Rounded corners for the div */
        }

        .certification p {
            margin: 10px 0;
            /* Spacing between paragraphs */
            font-weight: normal;
            /* Ensure text is normal weight */
        }

        /* For table */
        table {
            width: 80%;
            /* Adjust the width to 80% or whatever fits your layout */
            max-width: 1200px;
            /* Set a maximum width if you want to limit the table size */
            margin: 20px auto;
            /* Centers the table */
            border-collapse: collapse;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            color: #333;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table thead {
            background-color: #4CAF50;
            color: white;
        }

        table thead th {
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid #ddd;
        }

        table tbody tr {
            border-bottom: 1px solid #ddd;
        }

        table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tbody td {
            padding: 12px;
        }

        table tbody tr:hover {
            background-color: #f1f1f1;
        }



        /* Login Button Css */
        .login-button {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

